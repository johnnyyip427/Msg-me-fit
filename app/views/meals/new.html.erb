
<h1 class="form-group">Meal</h1>
<%= form_for :meal, url: user_meals_path do |f| %>
<div class="form-group">
   <%= f.label :meal%>
   <%= f.text_field :meal%>
   <%= f.hidden_field :user_id, :value => current_user.id %>
</div>
<div class="form-group">
   <%= f.submit "submit", class: "btn btn-default" %>
</div>
<% end %>